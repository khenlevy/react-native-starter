{
  "name": "buydy-monorepo",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/**"
  ],
  "dependencies": {
    "@babel/runtime": "^7.27.6",
    "node-ssh": "^13.2.1"
  },
  "devDependencies": {
    "@babel/core": "^7.24.0",
    "@babel/plugin-transform-runtime": "^7.24.0",
    "concurrently": "^8.2.2",
    "husky": "^9.1.7",
    "mongoose": "^8.18.2"
  },
  "scripts": {
    "api:dev": "yarn workspace @buydy/app-api dev",
    "api:start": "yarn workspace @buydy/app-api start",
    "api:start:prod": "NODE_ENV=production yarn workspace @buydy/app-api start",
    "api:lint": "yarn workspace @buydy/app-api lint",
    "api:prettier-lint": "yarn workspace @buydy/app-api prettier-lint",
    "api:test": "yarn workspace @buydy/app-api test",
    "api:health": "yarn workspace @buydy/app-api health",
    "api:release": "yarn workspace @buydy/app-api release",
    "scanner:dev": "yarn workspace @buydy/app-stocks-scanner dev",
    "scanner:start": "yarn workspace @buydy/app-stocks-scanner start",
    "scanner:start:prod": "NODE_ENV=production yarn workspace @buydy/app-stocks-scanner start",
    "scanner:test": "yarn workspace @buydy/app-stocks-scanner test",
    "scanner:test:metrics-enum": "yarn workspace @buydy/app-stocks-scanner test:metrics-enum",
    "scanner:prettier-lint": "yarn workspace @buydy/app-stocks-scanner prettier-lint",
    "scanner:release": "yarn workspace @buydy/app-stocks-scanner release",
    "scanner:release-rollback": "yarn workspace @buydy/app-stocks-scanner release-rollback",
    "web:release": "yarn workspace @buydy/app-stocks-web release",
    "db:release": "yarn workspace @buydy/app-db release",
    "release": "yarn release:stocks && yarn release:stocks-api && yarn release:stocks-web",
    "release:all": "yarn release:db && yarn release:stocks && yarn release:stocks-api && yarn release:stocks-web",
    "release:rollback": "yarn release:stocks-rollback",
    "web:dev": "yarn workspace @buydy/app-stocks-web dev",
    "web:build": "yarn workspace @buydy/app-stocks-web build",
    "web:preview": "yarn workspace @buydy/app-stocks-web preview",
    "web:prettier-lint": "yarn workspace @buydy/app-stocks-web prettier-lint",
    "dev:all": "node scripts/dev-all.js",
    "prettier-lint:all": "FORCE_COLOR=1 yarn workspaces foreach --all --interlaced --verbose run prettier-lint",
    "test:all": "FORCE_COLOR=1 yarn workspaces foreach --all --interlaced --verbose run test",
    "pre-push": "yarn validate:env && yarn prettier-lint:all && yarn test:all",
    "docs:update-api": "node scripts/update-api-docs.js",
    "cache:health": "node scripts/monitor-cache-health.js",
    "cache:cleanup": "node scripts/monitor-cache-health.js --cleanup",
    "jobs:health": "node scripts/monitor-job-history.js",
    "jobs:cleanup": "node scripts/monitor-job-history.js --cleanup",
    "cleanup:droplet": "node scripts/cleanup-droplet-disk.js",
    "maintenance:setup": "bash scripts/deploy-maintenance.sh",
    "disk:cleanup": "dv-disk cleanup",
    "files:sync": "dv-files sync",
    "prepare": "husky"
  },
  "packageManager": "yarn@4.9.2"
}
